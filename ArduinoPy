import serial
import time

# Configure a porta serial (certifique-se de usar a porta correta)
ser = serial.Serial('COM3', 9600)  # Mude 'COM3' para a porta correta
time.sleep(2)  # Aguarda a conexão ser estabelecida

while True:
    if ser.in_waiting > 0:
        line = ser.readline().decode('utf-8').strip()  # Lê a linha
        print(line)  # Imprime no console
